@model T3_Valle_Marco.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
}

<h1>Eliminar</h1>

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">¿Estas seguro de eliminar este Libro?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Titulo</label>
                    <input asp-for="Titulo" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Tema" class="form-label>">Tema</label>
                    <input asp-for="Tema" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioPublicacion" class="form-label">Año Publicacion</label>
                    <input asp-for="AnioPublicacion" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Paginas" class="form-label">Paginas</label>
                    <input asp-for="Paginas" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label">Categoria</label>
                    <input asp-for="Categoria" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Copias" class="form-label">Copias</label>
                    <input asp-for="Copias" disabled class="form-control" />
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">

                <button type="submit" class="btn btn-primary">Eliminar</button>
                <a asp-controller="Libro" asp-action="Index" class="btn btn-success">Cancelar</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}